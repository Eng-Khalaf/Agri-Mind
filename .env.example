# .env.example
# Sentinel Hub API Credentials
SENTINELHUB_CLIENT_ID="your_client_id_here"
SENTINELHUB_CLIENT_SECRET="your_client_secret_here"

# OpenWeatherMap API (Optional)
OPENWEATHER_API_KEY="your_openweather_key_here"

# Application Settings
DEMO_MODE=true
API_RATE_LIMIT=1
CACHE_TTL_HOURS=6

# Optional: Planetary Computer STAC API
PLANETARY_COMPUTER_API_KEY=""

# Farm Default Location (Wadi El Natrun, Egypt)
DEFAULT_LAT=30.3869
DEFAULT_LON=30.3419
DEFAULT_ZOOM=14
